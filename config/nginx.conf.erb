worker_processes 1;

events { worker_connections 1024; }

http {
  include       mime.types;
  default_type  application/octet-stream;

  sendfile        on;
  keepalive_timeout 65;

  server {
    listen <%= ENV["PORT"] %>;  # Use Heroku's dynamically assigned port
    server_name localhost;

    # Root directory for static files
    root /app/public;
    index index.html;

    # Log settings for debugging
    access_log /dev/stdout;
    error_log /dev/stderr;

    # Serve static files and handle routing for SPAs
    location / {
      try_files $uri /index.html;  # For single-page applications
    }

    # Error handling for 404s
    error_page 404 /index.html;

    # Cache rules for specific file types
    location ~* \.(?:css|js|woff2?|webm|ttf|otf|eot|svg|ico|jpg|jpeg|gif|png|mp4|mov|ogg|ogv|webp)$ {
      expires 1y;
      access_log off;
      add_header Cache-Control "public";
    }

    location ~* \.(?:manifest|appcache|html?|xml|json)$ {
      expires -1;
      add_header Cache-Control "no-store";
    }
  }
}
