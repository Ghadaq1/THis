server {
  listen <%= ENV["PORT"] %>;  # This ensures NGINX binds to Heroku's $PORT

  root /app/public;          # Ensure your static files are inside the 'public' directory
  index index.html;

  location / {
    try_files $uri /index.html;
  }

  error_page 404 /index.html;

  location ~* \.(?:manifest|appcache|html?|xml|json)$ {
    expires -1;
  }

  location ~* \.(?:css|js|woff2?|webm|ttf|otf|eot|svg|ico|jpg|jpeg|gif|png|mp4|mov|ogg|ogv|webp)$ {
    expires 1y;
    access_log off;
    add_header Cache-Control "public";
  }
}
